{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "dist",
		"rootDir": "src",
		"sourceMap": true,
		"strict": false,
		"types": ["vitest/globals", "node"],
		"skipLibCheck": true,
		"esModuleInterop": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
