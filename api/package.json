{
	"name": "api",
	"version": "1.0.0",
	"description": "",
	"scripts": {
		"copy:assets": "mkdir -p dist/assets && cp -r src/assets/fonts dist/assets/fonts",
		"copy:shared": "mkdir -p src/shared && cp ../shared/*.ts src/shared/",
		"build:shared": "tsc -p ../shared/tsconfig.json",
		"build": "npm run build:shared && npm run copy:shared && tsc && npm run copy:assets",
		"watch": "tsc -w",
		"clean": "rimraf dist && rimraf src/shared && rimraf ../shared/dist",
		"prestart": "npm run clean && npm run build",
		"start": "func start",
		"test": "vitest run",
		"test:watch": "vitest --watch",
		"test:coverage": "vitest run --coverage"
	},
	"dependencies": {
		"@azure/functions": "^4.10.0",
		"canvas": "^3.2.0",
		"mongoose": "^9.1.2"
	},
	"devDependencies": {
		"rimraf": "^6.1.2"
	},
	"main": "dist/index.js"
}
